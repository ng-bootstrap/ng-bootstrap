{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["es2015", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "outDir": "temp",
    "sourceMap": true,
    "baseUrl": "./node_modules",
    "paths": {
      "@ng-bootstrap/ng-bootstrap": ["../src/index"]
    }
  },
  "include": [
    "./demo/src/*.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": false,
    "preserveWhitespaces": true
  }
}
