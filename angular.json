{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "",
	"projects": {
		"ng-bootstrap": {
			"root": "",
			"sourceRoot": "src",
			"projectType": "library",
			"architect": {
				"build": {
					"builder": "@angular/build:ng-packagr",
					"options": {
						"tsConfig": "src/tsconfig.json",
						"project": "src/ng-package.json"
					},
					"configurations": {
						"production": {
							"tsConfig": "src/tsconfig.prod.json"
						}
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"fileReplacements": [
							{
								"replace": "src/config/config.environment.ts",
								"with": "src/config/config.environment.test.ts"
							},
							{
								"replace": "src/utils/transition/transition.environment.ts",
								"with": "src/utils/transition/transition.environment.test.ts"
							}
						],
						"main": "src/test.ts",
						"polyfills": ["@angular/localize/init"],
						"tsConfig": "src/tsconfig.spec.json",
						"karmaConfig": "src/karma.conf.js",
						"codeCoverageExclude": ["src/test.ts", "src/test/**"]
					},
					"configurations": {
						"tdd": {
							"sourceMap": false
						},
						"coverage": {
							"codeCoverage": true,
							"sourceMap": true,
							"progress": false,
							"watch": false
						},
						"saucelabs": {
							"sourceMap": false,
							"progress": false,
							"watch": false,
							"karmaConfig": "src/karma.sauce.conf.js"
						}
					},
					"defaultConfiguration": "tdd"
				},
				"lint": {
					"builder": "@angular-eslint/builder:lint",
					"options": {
						"lintFilePatterns": ["src/**/*.{ts,html}", "schematics/**/*.ts"]
					}
				}
			}
		},
		"demo": {
			"root": "demo",
			"sourceRoot": "demo/src",
			"projectType": "application",
			"prefix": "ngbd",
			"schematics": {},
			"architect": {
				"build": {
					"builder": "@angular/build:application",
					"options": {
						"allowedCommonJsDependencies": ["prismjs"],
						"outputPath": "demo/dist",
						"index": "demo/src/index.html",
						"browser": "demo/src/main.ts",
						"polyfills": ["@angular/localize/init"],
						"tsConfig": "demo/tsconfig.json",
						"assets": [
							{
								"glob": "**/*",
								"input": "demo/src/public",
								"output": "/"
							}
						],
						"styles": [
							"node_modules/bootstrap/dist/css/bootstrap.css",
							"node_modules/bootstrap-icons/font/bootstrap-icons.css",
							"demo/src/style/prism-light.css",
							"demo/src/style/prism-dark.css",
							"demo/src/style/app.scss",
							"demo/src/style/demos.css"
						],
						"scripts": []
					},
					"configurations": {
						"production": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "2mb",
									"maximumError": "5mb"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "6kb",
									"maximumError": "10kb"
								}
							],
							"outputHashing": "all"
						},
						"development": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true
						},
						"ci": {
							"outputHashing": "all",
							"progress": false
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular/build:dev-server",
					"configurations": {
						"development": {
							"buildTarget": "demo:build:development"
						},
						"playwright": {
							"buildTarget": "demo:build:production",
							"liveReload": false,
							"watch": false
						}
					},
					"defaultConfiguration": "development"
				},
				"lint": {
					"builder": "@angular-eslint/builder:lint",
					"options": {
						"lintFilePatterns": ["demo/**/*.{ts,html}"]
					}
				},
				"extract-i18n": {
					"builder": "@angular/build:extract-i18n",
					"options": {
						"buildTarget": "demo:build"
					}
				}
			}
		},
		"e2e-app": {
			"root": "e2e-app",
			"sourceRoot": "e2e-app/src",
			"projectType": "application",
			"prefix": "app",
			"schematics": {},
			"architect": {
				"build": {
					"builder": "@angular/build:application",
					"options": {
						"outputPath": {
							"base": "e2e-app/dist"
						},
						"index": "e2e-app/src/index.html",
						"tsConfig": "e2e-app/tsconfig.json",
						"assets": ["e2e-app/src/favicon.ico"],
						"styles": ["node_modules/bootstrap/dist/css/bootstrap.css", "e2e-app/src/style/app.scss"],
						"browser": "e2e-app/src/main.ts",
						"polyfills": ["zone.js", "@angular/localize/init"]
					},
					"configurations": {
						"production": {
							"outputHashing": "all"
						},
						"development": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true,
							"namedChunks": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular/build:dev-server",
					"configurations": {
						"development": {
							"buildTarget": "e2e-app:build:development"
						},
						"playwright": {
							"buildTarget": "e2e-app:build:production",
							"liveReload": false,
							"watch": false,
							"prebundle": false
						}
					},
					"defaultConfiguration": "development"
				},
				"lint": {
					"builder": "@angular-eslint/builder:lint",
					"options": {
						"lintFilePatterns": ["e2e-app/**/*.{ts,html}"]
					}
				}
			}
		},
		"ssr-app": {
			"root": "ssr-app",
			"sourceRoot": "ssr-app/src",
			"projectType": "application",
			"prefix": "app",
			"schematics": {},
			"architect": {
				"build": {
					"builder": "@angular/build:application",
					"options": {
						"outputPath": "ssr-app/dist",
						"index": "ssr-app/src/index.html",
						"browser": "ssr-app/src/main.ts",
						"polyfills": ["@angular/localize/init"],
						"tsConfig": "ssr-app/tsconfig.json",
						"assets": [
							"ssr-app/src/favicon.ico",
							{
								"glob": "**/*",
								"input": "ssr-app/src/public",
								"output": "/"
							}
						],
						"styles": ["node_modules/bootstrap/dist/css/bootstrap.css"],
						"scripts": [],
						"server": "ssr-app/src/main.server.ts",
						"ssr": {
							"entry": "ssr-app/server.ts"
						}
					},
					"configurations": {
						"production": {
							"outputHashing": "all"
						},
						"development": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular/build:dev-server",
					"configurations": {
						"production": {
							"buildTarget": "ssr-app:build:production"
						},
						"development": {
							"buildTarget": "ssr-app:build:development"
						}
					},
					"defaultConfiguration": "development"
				},
				"lint": {
					"builder": "@angular-eslint/builder:lint",
					"options": {
						"lintFilePatterns": ["ssr-app/**/*.{ts,html}"]
					}
				}
			}
		},
		"test-app": {
			"projectType": "application",
			"schematics": {},
			"root": "test-app",
			"sourceRoot": "test-app/src",
			"prefix": "app",
			"architect": {
				"build": {
					"builder": "@angular/build:application",
					"options": {
						"outputPath": "test-app/dist",
						"index": "test-app/src/index.html",
						"browser": "test-app/src/main.ts",
						"tsConfig": "test-app/tsconfig.json",
						"assets": ["test-app/src/favicon.ico"],
						"styles": ["node_modules/bootstrap/dist/css/bootstrap.css", "test-app/src/styles.css"],
						"scripts": []
					},
					"configurations": {
						"production": {
							"outputHashing": "all"
						},
						"development": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular/build:dev-server",
					"configurations": {
						"production": {
							"buildTarget": "test-app:build:production"
						},
						"development": {
							"buildTarget": "test-app:build:development"
						}
					},
					"defaultConfiguration": "development"
				}
			}
		}
	},
	"cli": {
		"packageManager": "yarn",
		"analytics": false
	}
}
