{
  "name": "angular-ng-bootstrap",
  "version": "0.1.0",
  "description": "ng-bootstrap core components for angular2",
  "author": "https://github.com/ng-bootstrap/core/graphs/contributors",
  "main": "dist/cjs/core.js",
  "scripts": {
    "setup": "node misc/validate-commit.install.js",
    "build": "rm -rf dist && tsc src/core.ts --outDir dist/cjs --target ES5 --module commonjs -d --experimentalDecorators --emitDecoratorMetadata && gulp build",
    "watch": "tsc --watch",
    "build_tests": "rm -rf temp && tsc",
    "test": "karma start karma.conf.js",
    "test:ci": "tsc && karma start --single-run --reporters dots --browsers Firefox"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ng-bootstrap/core.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ng-bootstrap/core/issues"
  },
  "homepage": "https://github.com/ng-bootstrap/core#readme",
  "devDependencies": {
    "angular2": "^2.0.0-alpha.44",
    "clang-format": "^1.0.29",
    "es6-shim": "^0.33.8",
    "gulp": "^3.9.0",
    "gulp-clang-format": "^1.0.21",
    "gulp-util": "^3.0.6",
    "jasmine": "^2.3.2",
    "jasmine-core": "^2.3.4",
    "karma": "^0.13.14",
    "karma-chrome-launcher": "^0.2.1",
    "karma-firefox-launcher": "^0.1.6",
    "karma-jasmine": "^0.3.6",
    "systemjs": "^0.19.5",
    "typescript": "^1.6.2",
    "webpack": "^1.12.2"
  }
}
