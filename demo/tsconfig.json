{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../out-tsc/demo",
    "paths": {
      "@ng-bootstrap/ng-bootstrap": ["src/app/ng-bootstrap"]
    },
    "target": "es2018"
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.po.ts",
    "src/**/*.e2e-spec.ts"
  ]
}
